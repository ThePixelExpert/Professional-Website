{
  "name": "homelab-devpod",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    }
  },
  "postCreateCommand": "sed -i 's/\\r//' ${containerWorkspaceFolder}/.devcontainer/install-tools.sh && bash ${containerWorkspaceFolder}/.devcontainer/install-tools.sh",
  "mounts": [
    "source=${localWorkspaceFolder}/devpod/kubeconfig.yaml,target=/home/vscode/.kube/config,type=bind,consistency=cached"
  ]
}
