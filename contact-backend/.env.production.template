# Copy to .env and fill in actual values
# Production environment configuration for backend on Proxmox VM

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Supabase instance URL
SUPABASE_URL=https://supabase.edwardstech.dev

# Public anonymous key (safe to expose in client-side code)
SUPABASE_ANON_KEY=

# Service role key (NEVER expose client-side, has admin privileges)
SUPABASE_SERVICE_ROLE_KEY=

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Environment mode
NODE_ENV=production

# Backend server port
PORT=3001

# Frontend URL for CORS
FRONTEND_URL=https://edwardstech.dev

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# Gmail account for sending notifications
EMAIL_USER=

# Gmail app-specific password (not your account password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_APP_PASSWORD=

# ============================================================================
# STRIPE PAYMENT CONFIGURATION
# ============================================================================
# Stripe secret key (from Stripe Dashboard)
STRIPE_SECRET_KEY=

# Stripe webhook signing secret (from Stripe webhook configuration)
STRIPE_WEBHOOK_SECRET=

# ============================================================================
# LEGACY VARIABLES (NO LONGER NEEDED)
# ============================================================================
# Backend now uses Supabase client - no direct database connection needed
# DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD - REMOVED

# Backend now uses Supabase Auth - no JWT tokens needed
# JWT_SECRET, ADMIN_USER, ADMIN_PASS - REMOVED
