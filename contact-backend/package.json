{
  "name": "edwards-engineering-contact-backend",
  "version": "1.0.0",
  "description": "Contact form backend for Edwards Engineering website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev-local": "node server-dev.js",
    "install-pm2": "npm install -g pm2",
    "start-production": "pm2 start server.js --name edwards-contact-api",
    "stop-production": "pm2 stop edwards-contact-api",
    "restart-production": "pm2 restart edwards-contact-api",
    "logs": "pm2 logs edwards-contact-api"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "contact-form",
    "nodejs",
    "express",
    "email"
  ],
  "author": "Logan Edwards",
  "license": "MIT"
}
